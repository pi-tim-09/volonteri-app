@model IEnumerable<WebApp.Models.Application>

@{
    ViewData["Title"] = "Manage Applications";
    var projectTitle = ViewBag.ProjectTitle as string;
    var projectId = ViewBag.ProjectId as int?;
    var filterStatus = ViewBag.FilterStatus as ApplicationStatus?;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-4">Manage Applications</h1>
            @if (!string.IsNullOrEmpty(projectTitle))
            {
                <p class="lead">For project: <strong>@projectTitle</strong></p>
            }
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Filter Section -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" asp-action="Manage" class="row g-3">
                @if (projectId.HasValue)
                {
                    <input type="hidden" name="projectId" value="@projectId" />
                }
                
                <div class="col-md-4">
                    <label for="status" class="form-label">Filter by Status:</label>
                    <select name="status" id="status" class="form-select">
                        <option value="">All Statuses</option>
                        <option value="@ApplicationStatus.Pending" selected="@(filterStatus == ApplicationStatus.Pending)">Pending</option>
                        <option value="@ApplicationStatus.Accepted" selected="@(filterStatus == ApplicationStatus.Accepted)">Accepted</option>
                        <option value="@ApplicationStatus.Rejected" selected="@(filterStatus == ApplicationStatus.Rejected)">Rejected</option>
                        <option value="@ApplicationStatus.Withdrawn" selected="@(filterStatus == ApplicationStatus.Withdrawn)">Withdrawn</option>
                        <option value="@ApplicationStatus.Completed" selected="@(filterStatus == ApplicationStatus.Completed)">Completed</option>
                    </select>
                </div>
                
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-funnel"></i> Apply Filter
                    </button>
                    <a asp-action="Manage" asp-route-projectId="@projectId" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Clear
                    </a>
                </div>
            </form>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(projectTitle))
    {
        <div class="mb-3">
            <a asp-action="Manage" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Show All Applications
            </a>
        </div>
    }

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-center bg-warning bg-opacity-10">
                <div class="card-body">
                    <h3 class="card-title">@Model.Count(a => a.Status == ApplicationStatus.Pending)</h3>
                    <p class="card-text text-muted">Pending</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center bg-success bg-opacity-10">
                <div class="card-body">
                    <h3 class="card-title">@Model.Count(a => a.Status == ApplicationStatus.Accepted)</h3>
                    <p class="card-text text-muted">Accepted</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center bg-danger bg-opacity-10">
                <div class="card-body">
                    <h3 class="card-title">@Model.Count(a => a.Status == ApplicationStatus.Rejected)</h3>
                    <p class="card-text text-muted">Rejected</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center bg-info bg-opacity-10">
                <div class="card-body">
                    <h3 class="card-title">@Model.Count()</h3>
                    <p class="card-text text-muted">Total</p>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Application ID</th>
                        <th>Volunteer</th>
                        <th>Project</th>
                        <th>Skills</th>
                        <th>Applied Date</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var application in Model.OrderByDescending(a => a.AppliedAt))
                    {
                        var statusBadge = application.Status switch
                        {
                            ApplicationStatus.Pending => "badge bg-warning text-dark",
                            ApplicationStatus.Accepted => "badge bg-success",
                            ApplicationStatus.Rejected => "badge bg-danger",
                            ApplicationStatus.Withdrawn => "badge bg-secondary",
                            ApplicationStatus.Completed => "badge bg-info",
                            _ => "badge bg-secondary"
                        };

                        <tr>
                            <td><strong>#@application.Id</strong></td>
                            <td>
                                <div>
                                    <strong>@application.Volunteer?.FirstName @application.Volunteer?.LastName</strong>
                                </div>
                                <div class="small text-muted">
                                    <i class="bi bi-envelope"></i> @application.Volunteer?.Email
                                </div>
                                <div class="small text-muted">
                                    <i class="bi bi-telephone"></i> @application.Volunteer?.PhoneNumber
                                </div>
                                <div class="small text-muted">
                                    <i class="bi bi-geo-alt"></i> @application.Volunteer?.City
                                </div>
                            </td>
                            <td>
                                <strong>@application.Project?.Title</strong>
                            </td>
                            <td>
                                @if (application.Volunteer?.Skills != null && application.Volunteer.Skills.Any())
                                {
                                    @foreach (var skill in application.Volunteer.Skills.Take(3))
                                    {
                                        <span class="badge bg-primary mb-1">@skill</span><br/>
                                    }
                                    @if (application.Volunteer.Skills.Count > 3)
                                    {
                                        <span class="small text-muted">+@(application.Volunteer.Skills.Count - 3) more</span>
                                    }
                                }
                            </td>
                            <td>
                                <div>@application.AppliedAt.ToString("dd/MM/yyyy")</div>
                                <div class="small text-muted">@application.AppliedAt.ToString("HH:mm")</div>
                                @if (application.ReviewedAt.HasValue)
                                {
                                    <div class="small text-muted mt-1">
                                        Reviewed: @application.ReviewedAt.Value.ToString("dd/MM/yyyy")
                                    </div>
                                }
                            </td>
                            <td>
                                <span class="@statusBadge">@application.Status</span>
                                @if (!string.IsNullOrEmpty(application.ReviewNotes))
                                {
                                    <div class="mt-1">
                                        <button type="button" 
                                                class="btn btn-sm btn-outline-info" 
                                                data-bs-toggle="popover" 
                                                data-bs-content="@application.ReviewNotes"
                                                title="Review Notes">
                                            <i class="bi bi-info-circle"></i> Notes
                                        </button>
                                    </div>
                                }
                            </td>
                            <td>
                                @if (application.Status == ApplicationStatus.Pending)
                                {
                                    <div class="btn-group-vertical" role="group">
                                        <!-- Approve Button -->
                                        <button type="button" 
                                                class="btn btn-sm btn-success mb-1" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#approveModal@(application.Id)">
                                            <i class="bi bi-check-circle"></i> Approve
                                        </button>
                                        
                                        <!-- Reject Button -->
                                        <button type="button" 
                                                class="btn btn-sm btn-danger" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#rejectModal@(application.Id)">
                                            <i class="bi bi-x-circle"></i> Reject
                                        </button>
                                    </div>

                                    <!-- Approve Modal -->
                                    <div class="modal fade" id="approveModal@(application.Id)" tabindex="-1" aria-labelledby="approveModalLabel@(application.Id)" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <form asp-action="Approve" method="post">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@application.Id" />
                                                    
                                                    <div class="modal-header bg-success text-white">
                                                        <h5 class="modal-title" id="approveModalLabel@(application.Id)">
                                                            <i class="bi bi-check-circle"></i> Approve Application
                                                        </h5>
                                                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>Are you sure you want to approve the application from <strong>@application.Volunteer?.FirstName @application.Volunteer?.LastName</strong>?</p>
                                                        
                                                        <div class="mb-3">
                                                            <label for="approveNotes@(application.Id)" class="form-label">Review Notes (optional):</label>
                                                            <textarea class="form-control" 
                                                                      id="approveNotes@(application.Id)" 
                                                                      name="reviewNotes" 
                                                                      rows="3" 
                                                                      placeholder="Add any comments or notes..."></textarea>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                        <button type="submit" class="btn btn-success">
                                                            <i class="bi bi-check-circle"></i> Confirm Approval
                                                        </button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Reject Modal -->
                                    <div class="modal fade" id="rejectModal@(application.Id)" tabindex="-1" aria-labelledby="rejectModalLabel@(application.Id)" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <form asp-action="Reject" method="post">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@application.Id" />
                                                    
                                                    <div class="modal-header bg-danger text-white">
                                                        <h5 class="modal-title" id="rejectModalLabel@(application.Id)">
                                                            <i class="bi bi-x-circle"></i> Reject Application
                                                        </h5>
                                                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>Are you sure you want to reject the application from <strong>@application.Volunteer?.FirstName @application.Volunteer?.LastName</strong>?</p>
                                                        
                                                        <div class="mb-3">
                                                            <label for="rejectNotes@(application.Id)" class="form-label">Reason for Rejection (optional):</label>
                                                            <textarea class="form-control" 
                                                                      id="rejectNotes@(application.Id)" 
                                                                      name="reviewNotes" 
                                                                      rows="3" 
                                                                      placeholder="Explain why this application is being rejected..."></textarea>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                        <button type="submit" class="btn btn-danger">
                                                            <i class="bi bi-x-circle"></i> Confirm Rejection
                                                        </button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted">No actions available</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No applications found matching the current filter.
        </div>
    }
</div>

@section Scripts {
    <script>
        // Initialize Bootstrap popovers
        var popoverTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="popover"]'))
        var popoverList = popoverTriggerList.map(function (popoverTriggerEl) {
            return new bootstrap.Popover(popoverTriggerEl)
        });
    </script>
}
