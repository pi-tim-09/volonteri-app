@model IEnumerable<WebApp.Models.Organization>

@{
    ViewData["Title"] = "Organizations";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">Organizations</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Organization
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var org in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">@org.OrganizationName</h5>
                            @if (org.IsVerified)
                            {
                                <span class="badge bg-success" title="Verified Organization">
                                    <i class="bi bi-check-circle-fill"></i> Verified
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark" title="Pending Verification">
                                    <i class="bi bi-hourglass-split"></i> Pending
                                </span>
                            }
                        </div>
                        <div class="card-body">
                            <p class="card-text text-muted">@org.Description</p>
                            
                            <div class="mb-2">
                                <strong><i class="bi bi-geo-alt-fill text-primary"></i> Location:</strong><br/>
                                <small>@org.Address, @org.City</small>
                            </div>

                            <div class="mb-2">
                                <strong><i class="bi bi-person-fill text-primary"></i> Contact Person:</strong><br/>
                                <small>@org.FirstName @org.LastName</small>
                            </div>

                            <div class="mb-2">
                                <strong><i class="bi bi-envelope-fill text-primary"></i> Email:</strong><br/>
                                <small><a href="mailto:@org.Email">@org.Email</a></small>
                            </div>

                            <div class="mb-2">
                                <strong><i class="bi bi-telephone-fill text-primary"></i> Phone:</strong><br/>
                                <small>@org.PhoneNumber</small>
                            </div>


                            <div class="mt-2">
                                <small class="text-muted">
                                    <i class="bi bi-calendar-event"></i> Created: @org.CreatedAt.ToString("dd/MM/yyyy")
                                </small>
                            </div>
                        </div>
                        <div class="card-footer bg-light">
                            <div class="btn-group w-100" role="group">
                                <a asp-action="Details" asp-route-id="@org.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye"></i> Details
                                </a>
                                <a asp-action="Edit" asp-route-id="@org.Id" class="btn btn-sm btn-outline-secondary">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a asp-controller="Projects" asp-action="Index" asp-route-organizationId="@org.Id" class="btn btn-sm btn-outline-info">
                                    <i class="bi bi-folder"></i> Projects
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No organizations found. <a asp-action="Create">Create the first one!</a>
        </div>
    }
</div>

@section Scripts {
    <script>

    </script>
}
