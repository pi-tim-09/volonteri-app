@model WebApp.ViewModels.UserFilterViewModel

@{
    ViewData["Title"] = "User Management";
}

<div class="container-fluid">
    <div class="mb-4">
        <h1><i class="bi bi-people-fill"></i> User Management</h1>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Statistics Cards -->
    <div class="mb-3">
        <div class="row row-cols-1 row-cols-md-4 g-3">
            <div class="col">
                <div class="card text-center h-100">
                    <div class="card-body d-flex flex-column justify-content-center">
                        <h5 class="card-title">Total Users</h5>
                        <p class="display-6 mb-1">@(Model.TotalAdmins + Model.TotalOrganizations + Model.TotalVolunteers)</p>
                        <small class="text-muted">Showing @Model.Users.Count() of @Model.TotalUsers</small>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card text-center h-100">
                    <div class="card-body d-flex flex-column justify-content-center">
                        <h5 class="card-title">Admins</h5>
                        <p class="display-6 mb-0">@Model.TotalAdmins</p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card text-center h-100">
                    <div class="card-body d-flex flex-column justify-content-center">
                        <h5 class="card-title">Organizations</h5>
                        <p class="display-6 mb-0">@Model.TotalOrganizations</p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card text-center h-100">
                    <div class="card-body d-flex flex-column justify-content-center">
                        <h5 class="card-title">Volunteers</h5>
                        <p class="display-6 mb-0">@Model.TotalVolunteers</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Search and Filter Form -->
    <div class="card shadow-sm mb-3">
        <div class="card-body">
            <form method="get" asp-action="Index" id="filterForm">
                <div class="row g-3">
                    <div class="col-md-4">
                        <label for="searchTerm" class="form-label">
                            <i class="bi bi-search"></i> Search
                        </label>
                        <input type="text" 
                               class="form-control" 
                               id="searchTerm" 
                               name="searchTerm" 
                               value="@Model.SearchTerm" 
                               placeholder="Search by name, email, phone, or organization..." />
                    </div>
                    <div class="col-md-3">
                        <label for="roleFilter" class="form-label">
                            <i class="bi bi-filter"></i> Role
                        </label>
                        <select class="form-select" id="roleFilter" name="roleFilter">
                            <option value="">All Roles</option>
                            <option value="@((int)WebApp.Models.UserRole.Admin)" 
                                    selected="@(Model.RoleFilter == WebApp.Models.UserRole.Admin)">
                                Admin
                            </option>
                            <option value="@((int)WebApp.Models.UserRole.Organization)" 
                                    selected="@(Model.RoleFilter == WebApp.Models.UserRole.Organization)">
                                Organization
                            </option>
                            <option value="@((int)WebApp.Models.UserRole.Volunteer)" 
                                    selected="@(Model.RoleFilter == WebApp.Models.UserRole.Volunteer)">
                                Volunteer
                            </option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="isActiveFilter" class="form-label">
                            <i class="bi bi-toggle-on"></i> Status
                        </label>
                        <select class="form-select" id="isActiveFilter" name="isActiveFilter">
                            <option value="">All Status</option>
                            <option value="true" selected="@(Model.IsActiveFilter == true)">Active</option>
                            <option value="false" selected="@(Model.IsActiveFilter == false)">Inactive</option>
                        </select>
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <div class="btn-group w-100" role="group">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-funnel"></i> Apply
                            </button>
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Clear
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Role</th>
                            <th>Created At</th>
                            <th>Last Login</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Users)
                        {
                            <tr>
                                <td>@user.Id</td>
                                <td>
                                    <strong>@user.FirstName @user.LastName</strong>
                                    @if (user is WebApp.Models.Organization org)
                                    {
                                        <br />
                                        <small class="text-muted">@org.OrganizationName</small>
                                    }
                                </td>
                                <td>
                                    <a href="mailto:@user.Email">@user.Email</a>
                                </td>
                                <td>@user.PhoneNumber</td>
                                <td>
                                    @switch (user.Role)
                                    {
                                        case WebApp.Models.UserRole.Admin:
                                            <span class="badge bg-danger">
                                                <i class="bi bi-shield-fill-check"></i> Admin
                                            </span>
                                            break;
                                        case WebApp.Models.UserRole.Organization:
                                            <span class="badge bg-primary">
                                                <i class="bi bi-building"></i> Organization
                                            </span>
                                            break;
                                        case WebApp.Models.UserRole.Volunteer:
                                            <span class="badge bg-success">
                                                <i class="bi bi-person-heart"></i> Volunteer
                                            </span>
                                            break;
                                    }
                                </td>
                                <td>
                                    <small>@user.CreatedAt.ToString("dd/MM/yyyy")</small>
                                </td>
                                <td>
                                    @if (user.LastLoginAt.HasValue)
                                    {
                                        <small>@user.LastLoginAt.Value.ToString("dd/MM/yyyy HH:mm")</small>
                                    }
                                    else
                                    {
                                        <small class="text-muted">Never</small>
                                    }
                                </td>
                                <td>
                                    @if (user.IsActive)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> Active
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="bi bi-x-circle"></i> Inactive
                                        </span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@user.Id" 
                                           class="btn btn-info" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@user.Id" 
                                           class="btn btn-warning" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@user.Id" 
                                           class="btn btn-danger" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Users.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox display-1 text-muted"></i>
                    <p class="text-muted mt-3">No users found.</p>
                </div>
            }
        </div>
    </div>

    <!-- Pagination -->
    <nav aria-label="User pagination" class="mt-3">
        <div class="row align-items-center">
            <!-- Left: Page Size Selector -->
            <div class="col-md-4 text-start">
                <div class="btn-group btn-group-sm" role="group">
                    <span class="align-self-center me-2">Items per page:</span>
                    @foreach (var size in new[] { 5, 10, 25, 50 })
                    {
                        <a href="@Url.Action("Index", new { 
                                searchTerm = Model.SearchTerm, 
                                roleFilter = Model.RoleFilter, 
                                isActiveFilter = Model.IsActiveFilter,
                                pageNumber = 1,
                                pageSize = size 
                            })" 
                            class="btn btn-outline-primary @(Model.PageSize == size ? "active" : "")">
                            @size
                        </a>
                    }
                </div>
            </div>

            <!-- Center: Page Info -->
            <div class="col-md-4 text-center">
                <p class="text-muted mb-0">
                    Page @Model.PageNumber of @Model.TotalPages 
                    <br />
                    <small>(showing @Model.Users.Count() of @Model.TotalUsers users)</small>
                </p>
            </div>

            <!-- Right: Navigation Buttons -->
            <div class="col-md-4">
                <ul class="pagination justify-content-end mb-0">
                    <!-- First Page -->
                    <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                        <a class="page-link" 
                            href="@Url.Action("Index", new { 
                                searchTerm = Model.SearchTerm, 
                                roleFilter = Model.RoleFilter, 
                                isActiveFilter = Model.IsActiveFilter,
                                pageNumber = 1,
                                pageSize = Model.PageSize 
                            })">
                            <i class="bi bi-chevron-double-left"></i>
                        </a>
                    </li>

                    <!-- Previous Page -->
                    <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                        <a class="page-link" 
                            href="@Url.Action("Index", new { 
                                searchTerm = Model.SearchTerm, 
                                roleFilter = Model.RoleFilter, 
                                isActiveFilter = Model.IsActiveFilter,
                                pageNumber = Model.PageNumber - 1,
                                pageSize = Model.PageSize 
                            })">
                            <i class="bi bi-chevron-left"></i>
                        </a>
                    </li>

                    <!-- Page Numbers -->
                    @{
                        var startPage = Math.Max(1, Model.PageNumber - 2);
                        var endPage = Math.Min(Model.TotalPages, Model.PageNumber + 2);
                    }

                    @for (int i = startPage; i <= endPage; i++)
                    {
                        var pageNum = i;
                        <li class="page-item @(pageNum == Model.PageNumber ? "active" : "")">
                            <a class="page-link" 
                                href="@Url.Action("Index", new { 
                                    searchTerm = Model.SearchTerm, 
                                    roleFilter = Model.RoleFilter, 
                                    isActiveFilter = Model.IsActiveFilter,
                                    pageNumber = pageNum,
                                    pageSize = Model.PageSize 
                                })">
                                @pageNum
                            </a>
                        </li>
                    }

                    <!-- Next Page -->
                    <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                        <a class="page-link" 
                            href="@Url.Action("Index", new { 
                                searchTerm = Model.SearchTerm, 
                                roleFilter = Model.RoleFilter, 
                                isActiveFilter = Model.IsActiveFilter,
                                pageNumber = Model.PageNumber + 1,
                                pageSize = Model.PageSize 
                            })">
                            <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>

                    <!-- Last Page -->
                    <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                        <a class="page-link" 
                            href="@Url.Action("Index", new { 
                                searchTerm = Model.SearchTerm, 
                                roleFilter = Model.RoleFilter, 
                                isActiveFilter = Model.IsActiveFilter,
                                pageNumber = Model.TotalPages,
                                pageSize = Model.PageSize 
                            })">
                            <i class="bi bi-chevron-double-right"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

</div>
